<h2><%= @list.name.capitalize %></h2>
<%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>


<br>
<% @bookmarks.each do |bookmark| %>
<h3><%= bookmark.movie.title %></h3>
<p><%= image_tag(bookmark.movie.poster_url) %></p>
<p><%= bookmark.movie.overview %></p>
<p><%= bookmark.movie.rating %></p>
<p><%= bookmark.comment %></p>
<% end %>

<%= link_to "Delete a bookmark", bookmark_path, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-primary" %>
<br>
<%= link_to "Add a new bookmark", new_list_bookmark_path(@list), class: "btn btn-primary mt-3" %>
<br>
<%= link_to "Back to lists", lists_path%>
